{
  "name": "phoenix-pulse",
  "displayName": "Phoenix Pulse",
  "description": "The all-in-one Phoenix LiveView toolkit for VS Code: smart HEEx completions, controller-aware assigns, VerifiedRoutes, diagnostics, and go-to-definition powered by Tree-sitter.",
  "version": "0.1.7",
  "publisher": "onsever",
  "license": "MIT",
  "icon": "images/logo.png",
  "author": {
    "name": "Onurcan Sever",
    "url": "https://github.com/onsever"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/onsever/vscode-phoenix-pulse"
  },
  "bugs": {
    "url": "https://github.com/onsever/vscode-phoenix-pulse/issues"
  },
  "homepage": "https://github.com/onsever/vscode-phoenix-pulse#readme",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Other"
  ],
  "keywords": [
    "phoenix",
    "elixir",
    "liveview",
    "heex",
    "language-server",
    "lsp",
    "autocomplete",
    "intellisense",
    "diagnostics",
    "phoenix framework",
    "components"
  ],
  "galleryBanner": {
    "color": "#FD4F00",
    "theme": "dark"
  },
  "activationEvents": [
    "*"
  ],
  "main": "out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "phoenixPulse.goToDefinition",
        "title": "Phoenix Pulse: Go to Definition",
        "category": "Phoenix Pulse"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "phoenixPulse.goToDefinition",
          "when": "resourceExtname =~ /\\.(ex|exs|heex)$/",
          "group": "navigation@1"
        }
      ]
    },
    "languages": [
      {
        "id": "phoenix-heex",
        "aliases": [
          "Phoenix HEEx",
          "heex"
        ],
        "extensions": [
          ".heex"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "phoenix-heex",
        "scopeName": "text.html.heex",
        "path": "./syntaxes/heex.tmLanguage.json"
      },
      {
        "scopeName": "heex.sigil.embedded",
        "path": "./syntaxes/heex-sigil.tmLanguage.json",
        "injectTo": [
          "source.elixir"
        ]
      }
    ],
    "configuration": {
      "title": "Phoenix LiveView",
      "properties": {
        "files.associations": {
          "type": "object",
          "default": {
            "*.heex": "phoenix-heex"
          },
          "description": "Configure file associations for Phoenix HEEx files"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package-ext",
    "compile": "npm run compile-ext && npm run compile-lsp",
    "compile-ext": "node esbuild.js",
    "compile-lsp": "cd lsp && npm run build",
    "watch": "node esbuild.js --watch",
    "package-ext": "npm run compile-ext -- --production && npm run compile-lsp",
    "package": "npm run package-ext && vsce package",
    "test": "vitest run",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0",
    "vscode-uri": "^3.0.7",
    "web-tree-sitter": "^0.25.10"
  },
  "devDependencies": {
    "@types/node": "^18.19.0",
    "@types/vscode": "^1.75.0",
    "@vscode/vsce": "^2.19.0",
    "esbuild": "^0.25.11",
    "typescript": "^5.0.0",
    "vitest": "^1.2.0",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11"
  }
}
